<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:background="@drawable/list_view_background"
        android:paddingBottom="2dp"
        android:weightSum="20">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="19"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/next_name"
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="6.5"
                    android:textColor="@color/colorAccentBlue"
                    android:layout_height="wrap_content"
                    tools:text="Frank Stein" />

                <TextView
                    android:id="@+id/next_phone"
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:textColor="@color/colorAccentBlue"
                    android:layout_weight="3.5"
                    android:layout_height="wrap_content"
                    tools:text="+254740114870" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/next_location"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="6.5"
                    android:layout_height="wrap_content"
                    tools:text="Nairobi, Westlands" />

                <TextView
                    android:id="@+id/next_date"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    tools:text="12 August, 2019" />

            </LinearLayout>

            <TextView
                android:id="@+id/next_service"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="Marriage Photography" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/nextOptions"
            android:contentDescription="@string/menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/icons8_menu_2_32px"/>

    </LinearLayout>

</RelativeLayout>