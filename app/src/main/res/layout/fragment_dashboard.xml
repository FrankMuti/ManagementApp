<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragmentDashboard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Dashboard">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/FormApplication"
                android:layout_margin="10dp"
                android:textSize="@dimen/largeFontSize"
                android:text="@string/your_appointments"
                android:textColor="#333333"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_sky_logo_black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:id="@+id/dsTimeDue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/FormApplication"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="Next Event"
                        android:textColor="#fff"/>

                    <TextView
                        android:id="@+id/dsServiceAndClient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/FormApplication"
                        android:textStyle="normal"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:maxLines="2"
                        android:text="Wedding photography at John Kamau"
                        android:textColor="#fff"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icons8_calendar_96px"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/dsClientDate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="#fff"
                            android:text="November 17"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icons8_clock_96px"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:id="@+id/dsClientTime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="#fff"
                            android:text="12:30 PM"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icons8_place_marker_96px"
                            android:scaleType="fitCenter"/>


                        <TextView
                            android:id="@+id/dsClientLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="#fff"
                            android:text="Nairobi, Westlands"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icons8_iphone_96px"
                            android:scaleType="fitCenter"/>

                        <TextView
                            android:id="@+id/dsClientPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="#fff"
                            android:text="+254 740 114870"/>

                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="2"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/dsAttended"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/FormApplication"
                            android:text="Attended"
                            android:elevation="0dp"
                            android:textColor="#fff"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/rounded_button"/>

                        <!--<Button-->
                            <!--android:id="@+id/dsReschedule"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_weight="1"-->
                            <!--android:textAppearance="@style/FormApplication"-->
                            <!--android:text="Reschedule"-->
                            <!--android:elevation="0dp"-->
                            <!--android:layout_marginLeft="5dp"-->
                            <!--android:textColor="#fff"-->
                            <!--android:background="@drawable/rounded_button"/>-->

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>